<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #2C3E50, #4CA1AF);" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupeisi.minisystemebancaire.controllers.admin.AdminLoginController">

    <children>
        <Label layoutX="243.0" layoutY="44.0" style="-fx-text-fill: white;" text="Admin">
            <font>
                <Font name="Arial Black" size="24.0" />
            </font>
        </Label>

        <Label layoutX="100.0" layoutY="150.0" style="-fx-text-fill: white;" text="Nom d'utilisateur :">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtUsername" layoutX="250.0" layoutY="145.0" prefHeight="30.0" prefWidth="250.0" promptText="Entrez votre nom d'utilisateur" style="-fx-background-radius: 8px;" />

        <Label layoutX="100.0" layoutY="210.0" style="-fx-text-fill: white;" text="Mot de passe :">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Label>
        <PasswordField fx:id="txtPassword" layoutX="250.0" layoutY="205.0" prefHeight="30.0" prefWidth="250.0" promptText="Entrez votre mot de passe" style="-fx-background-radius: 8px;" />

        <Button fx:id="btnLogin" layoutX="150.0" layoutY="300.0" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10px;" text="✅ Se connecter" />

        <Button fx:id="btnQuitter" layoutX="320.0" layoutY="300.0" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10px;" text="❌ Quitter" />
    </children>
</Pane>
